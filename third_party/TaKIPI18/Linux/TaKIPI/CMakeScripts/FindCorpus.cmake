FIND_PATH(
	CORPUS_INCLUDE_DIR
	Corpus/corpuslib_headers.h /usr/include /usr/local/include)
MARK_AS_ADVANCED(CORPUS_INCLUDE_DIR)

FIND_LIBRARY(CORPUS_LIBRARY NAMES corpus PATH /usr/lib /usr/local/lib)
MARK_AS_ADVANCED(CORPUS_LIBRARY)

IF (CORPUS_INCLUDE_DIR AND CORPUS_LIBRARY)
   SET(CORPUS_FOUND TRUE)
ENDIF (CORPUS_INCLUDE_DIR AND CORPUS_LIBRARY)


IF (CORPUS_FOUND)
   IF (NOT Corpus_FIND_QUIETLY)
      MESSAGE(STATUS "Found Corpus: ${CORPUS_LIBRARY}")
   ENDIF (NOT Corpus_FIND_QUIETLY)
ELSE (CORPUS_FOUND)
   IF (Corpus_FIND_REQUIRED)
      MESSAGE(FATAL_ERROR "Could not find Corpus")
   ENDIF (Corpus_FIND_REQUIRED)
ENDIF (CORPUS_FOUND)
