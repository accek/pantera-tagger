FIND_PATH(
	JOSKIPI_INCLUDE_DIR
	JOSKIPI/all_joskipi.h /usr/include /usr/local/include)
MARK_AS_ADVANCED(JOSKIPI_INCLUDE_DIR)

FIND_LIBRARY(JOSKIPI_LIBRARY NAMES joskipi PATH /usr/lib /usr/local/lib)
MARK_AS_ADVANCED(JOSKIPI_LIBRARY)

IF (JOSKIPI_INCLUDE_DIR AND JOSKIPI_LIBRARY)
   SET(JOSKIPI_FOUND TRUE)
ENDIF (JOSKIPI_INCLUDE_DIR AND JOSKIPI_LIBRARY)


IF (JOSKIPI_FOUND)
   IF (NOT JOSKIPI_FIND_QUIETLY)
      MESSAGE(STATUS "Found JOSKIPI: ${JOSKIPI_LIBRARY}")
   ENDIF (NOT JOSKIPI_FIND_QUIETLY)
ELSE (JOSKIPI_FOUND)
   IF (JOSKIPI_FIND_REQUIRED)
      MESSAGE(FATAL_ERROR "Could not find JOSKIPI")
   ENDIF (JOSKIPI_FIND_REQUIRED)
ENDIF (JOSKIPI_FOUND)
